{{> header }}
  <aside class="players-hud">
    <ul>
      {{#each games}}
        <li>
          <div>
            <a href="/game/{{this.id}}">Game {{this.id}}</a>
          </div>
        </li>
      {{/each}}
    </ul>
    
    <form action="/game/create" method="post">
      <input
        class="btn-gradient green large show"
        type="submit"
        value="New game"
      />
    </form>
  </aside>
  <main>
    <div class="board"></div>
  </main>
{{> footer }}